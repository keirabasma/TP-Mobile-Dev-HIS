<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00e5ff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        style=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center"
        android:text="convertisseur de Monaie"
        android:textColor="@color/black"
        android:textColorLink="#100000"
        android:textSize="24sp"
        android:textStyle="bold"

        >


    </TextView>

    <EditText
        android:id="@+id/money"
        android:layout_width="391dp"
        android:layout_height="38dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="#FAFAFA"
        android:backgroundTint="#F8F5F5"
        android:ems="10"
        android:inputType="text" />

    <RadioGroup
        android:id="@+id/argent"
        android:layout_width="match_parent"
        android:layout_height="612dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <RadioButton

                android:id="@+id/rd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Dinar->euro"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="euro->Dinar"
                android:textSize="20sp" />

        </LinearLayout>


        <Button
            android:id="@+id/convertir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:backgroundTint="#757272"
            android:text="Convertir" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="133dp"
            android:layout_height="35dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="100dp"
            android:text="Results" />


    </RadioGroup>
</LinearLayout>


